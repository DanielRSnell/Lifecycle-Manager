<div id="lifecycle-container" class="bg-gray-100 border border-gray-300 p-4 rounded-lg shadow-md" data-nonce="{{ nonce }}">
    <div class="text-2xl font-bold text-blue-600 mb-2">Pending</div>
    <div class="text-gray-700 mb-4">Order ID: {{ order_id }}</div>
    <div class="space-y-2">
        <p class="text-gray-800">Customer: {{ order.get_formatted_billing_full_name() }}</p>
        <p class="text-gray-800">Total: {{ order.get_formatted_order_total() }}</p>
        <p class="text-gray-800">Date: {{ order.get_date_created().date('Y-m-d H:i:s') }}</p>
    </div>
</div>
